<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section>
        <h1>
            <% if @user.picture? %>
                <%= image_tag @user.picture.url, class: "gravatar" if @user.picture? %>
                <%= @user.name %>
            <%else%>
                <%= gravatar_for @user %>
                <%= @user.name %>
            <%end%>
       </h1>
      <% if current_user?(@user) %>
          <span><%= link_to "Edit Profile", edit_user_path(current_user) %></span>
      <% end %>

    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>

    <% if  @user.bio %>
        <section class="bio">
            <h1>Bio</h1>
            <p><%= @user.bio %></p>
        </section>
    <% else %>
  	<% end %>

    <section class="micropost_form">
        <% if current_user?(@user) %>


  		<section >
  			<%= render 'shared/micropost_form' %>
  		</section>


  	<% else %>
  	<% end %>

    </section>

  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>

      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
