<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section>
        <h1>
            <% if @user.picture? %>
                <%= image_tag @user.picture.url, class: "gravatar-profile" if @user.picture? %>
                <%= @user.name %>
            <%else%>
                <%= gravatar_for @user %>
                <%= @user.name %>
            <%end%>
       </h1>
      <% if current_user?(@user) %>
          <span><%= link_to "Edit Profile", edit_user_path(current_user) %></span>




      <% end %>


    </section>

    <section class="messeges-btn">

        <% if current_user?(@user) %>



        <% else %>

            <%= link_to "Messege Me", conversations_path(sender_id: current_user.id, recipient_id: @user.id), method: 'post', class: "btn col-md-12 col-xs-12 btn-lg btn-primary blog-btn" %>
            <%= render 'follow_form' if logged_in? %>


        <% end %>
    </section>



    <section class="stats">
      <%= render 'shared/stats' %>
    </section>

    <% if  @user.bio? %>
        <section class="bio">
            <h3>Bio</h3>
            <p><%= @user.bio %></p>
        </section>
    <% else %>
  	<% end %>

    <section class="micropost_form">
        <% if current_user?(@user) %>


  		<section >
  			<%= render 'shared/micropost_form' %>
  		</section>


  	<% else %>
  	<% end %>

    </section>

  </aside>
  <div class="col-md-8">

    <% if @user.microposts.any? %>

      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
