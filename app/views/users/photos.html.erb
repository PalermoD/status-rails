
<div class="container">
    <div class="row make-columns">

        <% @user.microposts.find_each  do |micropost| %>
        <% if micropost.picture? %>
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <%= link_to micropost do %>
                            <%= image_tag(micropost.picture.url, class:"img-responsive gal-img") if micropost.picture? %>
                        <%end %>
                    </div>
                </div>
            </div>
            <%end%>

        <% end %>

    </div>
    <%= will_paginate @microposts %>
</div>
