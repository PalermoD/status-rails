
<% @micropost.comments.each do |comment| %>
<li id="micropost-<%= @micropost.id %>">
    <% if comment.user %>

    <% if comment.user.picture? %>

    <%= link_to comment.user do %>
    <div class="image-cropper"><%= image_tag comment.user.picture.url, class: "gravatar-feed" if comment.user.picture? %></div>
    <%end%>
    <% else %>
    <%= link_to gravatar_for(comment.user, size: 50), comment.user %>
    <% end %>

     <span class="user"><%= link_to comment.user.name, comment.user %></span>

     <span class="content">

           <%= comment.content %>
           <%= image_tag(comment.picture.url, class:"img-responsive") if comment.picture? %>

     </span>

      <span class="timestamp">
          <% if current_user?(comment.user) %>
            <%= link_to "delete", [comment.micropost, comment], method: :delete,
                data: { confirm: "You sure?" }, class: 'delete_post' %>
            <% else %>
            <%= link_to "view profile", comment.user  %>

           <% end %>

      </span>
      <% end %>



</li>

<% end %>
