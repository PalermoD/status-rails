
<% if current_user.picture? %>
<div class="image-cropper">
<%= link_to current_user do %>
<%= image_tag current_user.picture.url, class: "gravatar" if current_user.picture? %>
<%end%>
</div>
<% else %>

<%= link_to gravatar_for(current_user, size: 50), current_user %>

<% end %>
<h1><%= current_user.name %></h1>
<span><%= link_to "view my profile", current_user %></span>

<span><%= pluralize(current_user.microposts.count, "post") %></span>

<%= link_to "Write Blog", create_path, class: "col-md-12 btn btn-lg btn-primary blog-btn" %>
